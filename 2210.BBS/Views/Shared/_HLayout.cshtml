<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>@this.ViewBag.Title</title>
<meta name="keywords" content="Business Website, free templates, website templates, 3-column layout, CSS, XHTML" />
<meta name="description" content="Business Website, 3-column layout, free CSS template from templatemo.com" />
<link href="@Url.Content("~/Content/templatemo_style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    function clearText(field) {
        if (field.defaultValue == field.value) field.value = '';
        else if (field.value == '') field.value = field.defaultValue;
    }
</script>
</head>

<body >
<div id="templatemo_container">
   
    <div id="templatemo_header">
    	<div id="logosection">
	        <div class="sitelogo"></div>
        	<div class="sitename">            	
            	<span></span>            </div>
      </div>
        <div id="header">
        	<div class="title">
            	<br />
	        	<span class="bigtext">智能水网信息管理系统</span><br />
    	    	</div>

        </div>
	</div>
    
	<div id="templatemo_menu">
        <form action="@Url.Action("AllSearch", new { area=""})"  method="post">
    	<div id="search">
				<input name="title" class="textfield" type="text" value="输入关键字..." onfocus="clearText(this)" onblur="clearText(this)" style="color:silver;"/> 
                <input class="send_btn" type="submit" value="搜索" style="width:40px; border:1px solid silver;" />
    	</div>
        </form>
        <div id="menu">
            <ul>
                <li><a href="@Url.Action("Index", "Home", new { area=""})"  class="current">首页</a></li>
                <li><a href="@Url.Action("NewsList", "Home", new { area=""})" target="">动态新闻</a></li>
                <li><a href="@Url.Action("SearchNum", "Home", new { area = "" })">自助水量查询</a></li>
                <li><a href="@Url.Action("WaterPrice","Home", new {area="" })" target="">水费价格</a></li>
                <li><a href="@Url.Action("Register", "Account", new { area=""})" target="">开户申请</a></li>
                <li><a href="@Url.Action("LeaveMessage","Home")" target="">问题咨询</a></li>
            </ul>
        </div>
	</div>
    
    <!-- start of content -->
    
	<div id="templatemo_content">
        @RenderBody()
    	<!-- start of left column -->
        
    </div>
    
    <!-- end of content -->
        
        
	<div id="templatemo_footer">
        <a href="#">首页</a> | <a href="#">关于我们</a> | <a href="#">服务</a> | <a href="#">问题咨询</a> | <a href="#">联系我们</a><br />
        Copyright ©  <a href="#">桂林电子科技大学</a> | 设计者： <a href="#" target="_blank">李彤</a></div>
    <div id="templatemo_footer_bottom"></div>

</div>
</body>
</html>